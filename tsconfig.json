{
  "compilerOptions": {
    // Default
    "target": "es5",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    // Added
    "jsx": "react",
    "module": "ESNext",
    // Leave this commented out until tsconfig supports multiple outDir options
    // "declaration": true,
    // "emitDeclarationOnly": true,
    // "outDir": "dist/cjs",
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["**/*.test.tsx", "**/*.stories.tsx"]
}
